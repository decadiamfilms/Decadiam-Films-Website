// Delivery Runs - Main delivery scheduling table
model DeliveryRun {
  id                String   @id @default(uuid())
  company_id        String   @map("company_id")
  company           Company  @relation(fields: [company_id], references: [id], onDelete: Cascade)
  
  // Run Identification
  run_number        String   @unique @map("run_number") // DR-20250102-001
  run_name          String?  @map("run_name")           // Optional descriptive name
  
  // Assignment Details
  vehicle_id        String   @map("vehicle_id")
  vehicle           Vehicle  @relation(fields: [vehicle_id], references: [id])
  driver_id         String   @map("driver_id")
  driver            Driver   @relation(fields: [driver_id], references: [id])
  
  // Scheduling
  planned_date      DateTime @map("planned_date")      // Date of delivery
  start_time        DateTime? @map("start_time")       // Calculated start time from depot
  estimated_duration Int?    @map("estimated_duration") // Total estimated duration (minutes)
  
  // Route Details
  starting_location Json     @map("starting_location")  // Starting point (usually depot)
  total_distance    Float?   @map("total_distance")     // Total route distance (km)
  total_stops       Int      @default(0) @map("total_stops")
  
  // Status Tracking
  status            String   @default("PLANNED") // PLANNED, IN_PROGRESS, COMPLETED, CANCELLED
  actual_start_time DateTime? @map("actual_start_time")
  actual_end_time   DateTime? @map("actual_end_time")
  
  // Route Optimization Data
  optimized_route   Json?    @map("optimized_route")    // Store Google Maps route data
  route_updated_at  DateTime? @map("route_updated_at")
  
  // System Fields
  created_by        String   @map("created_by")         // User who created the run
  created_at        DateTime @default(now()) @map("created_at")
  updated_at        DateTime @updatedAt @map("updated_at")
  notes             String?
  
  // Relations
  deliveries        Delivery[]
  route_optimizations RouteOptimization[]
  
  @@map("delivery_runs")
}

// Individual Deliveries - Each stop on a delivery run
model Delivery {
  id                String   @id @default(uuid())
  delivery_run_id   String   @map("delivery_run_id")
  delivery_run      DeliveryRun @relation(fields: [delivery_run_id], references: [id], onDelete: Cascade)
  
  // Delivery Identification
  delivery_number   String   @unique @map("delivery_number") // DEL-20250102-001
  
  // Order/Quote Integration
  order_id          String?  @map("order_id")
  order             Order?   @relation(fields: [order_id], references: [id])
  quote_id          String?  @map("quote_id")
  quote             Quote?   @relation(fields: [quote_id], references: [id])
  
  // Customer Information
  customer_id       String   @map("customer_id")
  customer          Customer @relation(fields: [customer_id], references: [id])
  
  // Delivery Address & Contact
  delivery_address  Json     @map("delivery_address")   // Full address with GPS coordinates
  delivery_contact  Json?    @map("delivery_contact")   // Contact person details
  
  // Scheduling & Timing
  sequence_order    Int      @map("sequence_order")      // Order in the delivery run (1, 2, 3...)
  scheduled_time    DateTime? @map("scheduled_time")     // When customer expects delivery
  time_window_start DateTime? @map("time_window_start")  // Earliest acceptable time
  time_window_end   DateTime? @map("time_window_end")    // Latest acceptable time
  
  // Estimated Times (calculated by system)
  estimated_arrival DateTime? @map("estimated_arrival")  // System calculated ETA
  estimated_departure DateTime? @map("estimated_departure") // When to leave previous stop
  unloading_time    Int      @default(30) @map("unloading_time") // Minutes to unload
  
  // Actual Times (recorded by driver)
  actual_arrival    DateTime? @map("actual_arrival")
  actual_departure  DateTime? @map("actual_departure")
  
  // Delivery Details
  delivery_items    Json?    @map("delivery_items")     // Items being delivered
  special_instructions String? @map("special_instructions")
  access_notes      String?  @map("access_notes")       // Gate codes, access instructions
  
  // Status & Completion
  status            String   @default("PLANNED") // PLANNED, EN_ROUTE, ARRIVED, DELIVERED, FAILED
  delivery_notes    String?  @map("delivery_notes")
  completion_photos Json?    @map("completion_photos")  // Proof of delivery photos
  recipient_name    String?  @map("recipient_name")     // Who received the delivery
  signature_data    String?  @map("signature_data")     // Digital signature (base64)
  
  // Customer Communication
  notification_sent Boolean  @default(false) @map("notification_sent")
  notification_type String?  @map("notification_type")  // SMS, EMAIL, BOTH
  customer_phone    String?  @map("customer_phone")     // Phone for SMS notifications
  customer_email    String?  @map("customer_email")     // Email for notifications
  
  // System Fields
  created_at        DateTime @default(now()) @map("created_at")
  updated_at        DateTime @updatedAt @map("updated_at")
  
  // Relations
  notifications     DeliveryNotification[]
  
  @@map("deliveries")
}

