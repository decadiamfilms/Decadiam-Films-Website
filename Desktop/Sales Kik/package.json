  "description": "Modular self-service business platform for SMEs",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "dev:safe": "./start-dev.sh",
    "server:dev": "nodemon --exec ts-node --project tsconfig.server.json server/index.ts",
    "client:dev": "vite",
    "build": "tsc && vite build",
